<%
  @page_scope = 'users.new'
  #page_title I18n.translate('title', :scope => @page_scope)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>

<%= form_for(@user, :action => 'create') do |f| %>

    <%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @user, :sys_errors => @errors  } %>
    <div class="fields_20_80">
        <%= render :partial => 'form', :locals => { :f => f } %>
        <%= render :partial => 'password_form', :locals => { :f => f } %>
    </div>
    <div class="actions">
        <%= f.submit I18n.translate('view_action.create') %>
    </div>

<% end %>

 <%= link_to I18n.translate('users.index.action'), users_path if can? :manage, User %>

