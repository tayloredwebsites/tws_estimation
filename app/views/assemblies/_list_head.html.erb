
  <tr>

    <th><%= I18n.translate('assemblies.field_name_short.id') %></th>

    <th><%= I18n.translate('assemblies.field_name_short.description') %></th>

    <th><%= I18n.translate('assemblies.field_name_short.sort_order') %></th>

    <th><%= I18n.translate('assemblies.field_name_short.required') %></th>
<% if @deactivated_module %>
	<% if show_deactivated? %>
	<th><%= I18n.translate('assemblies.field_name_short.deactivated') %></th>
    <th colspan="4"><%= link_to I18n.translate('view_action.hide_deactivated'), list_assemblies_path('show_deactivated' => DB_FALSE.to_s) %></th>
	<% else %>
	<th colspan="3"><%= link_to I18n.translate('view_action.show_deactivated'), list_assemblies_path('show_deactivated' => DB_TRUE.to_s) %></th>
	<% end %>
<% else %>
	<th colspan="2">&nbsp;</th>
<% end %>
  </tr>
