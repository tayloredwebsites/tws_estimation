<%
    @page_scope = 'assemblies.new'
    @deactivated_module = defined?(Assembly.new.deactivated_module)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>

<%= form_for(@assembly, :action => 'create') do |f| %>

    <%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @assembly, :sys_errors => @errors  } %>

    <div class="fields_20_80">
        <%= render :partial => 'assemblies/form', :locals => { :f => f } %>
    </div>

    <div class="actions">
        <%= f.submit I18n.translate('view_action.create') %>
    </div>
    
<% end %>

<%= link_to I18n.translate('assemblies.index.action'), assemblies_path if can? :manage, @assembly %>
