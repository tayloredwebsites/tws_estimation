<%
    @page_scope = 'states.new'
    @deactivated_module = defined?(State.new.deactivated_module)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>

<%= form_for(@state, :action => 'create') do |f| %>

    <%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @state, :sys_errors => @errors  } %>

    <div class="fields_20_80">
        <%= render :partial => 'states/form', :locals => { :f => f } %>
    </div>

    <div class="actions">
        <%= f.submit I18n.translate('view_action.create') %>
    </div>
    
<% end %>

<%= link_to I18n.translate('states.index.action'), states_path if can? :manage, @state %>
