<%
  @page_scope = 'component_types.show'
    @deactivated_module = defined?(ComponentType.new.deactivated_module)
%>

<h3><%= I18n.translate('header', :scope => @page_scope) %></h3>

<%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @component_type, :sys_errors => @errors  } %>

<p id="notice"><%= notice %></p>


<div class="fields_20_80">
  <div class="field">
    <span class="label"><%= I18n.translate('component_types.field_name.description') %></span>
    <span class="value" id="component_type_description"><%= @component_type.description %></span>
  </div>
  <div class="field">
    <span class="label"><%= I18n.translate('component_types.field_name.sort_order') %></span>
    <span class="value" id="component_type_sort_order"><%= @component_type.sort_order %></span>
  </div>
  <div class="field">
    <span class="label"><%= I18n.translate('component_types.field_name.has_costs') %></span>
    <span class="value" id="component_type_has_costs"><%= @component_type.has_costs %></span>
  </div>
  <div class="field">
    <span class="label"><%= I18n.translate('component_types.field_name.has_hours') %></span>
    <span class="value" id="component_type_has_hours"><%= @component_type.has_hours %></span>
  </div>
  <div class="field">
    <span class="label"><%= I18n.translate('component_types.field_name.has_vendor') %></span>
    <span class="value" id="component_type_has_vendor"><%= @component_type.has_vendor %></span>
  </div>
  <div class="field">
    <span class="label"><%= I18n.translate('component_types.field_name.has_totals') %></span>
    <span class="value" id="component_type_has_totals"><%= @component_type.has_totals %></span>
  </div>
  <div class="field">
    <span class="label"><%= I18n.translate('component_types.field_name.in_totals_grid') %></span>
    <span class="value" id="component_type_in_totals_grid"><%= @component_type.in_totals_grid %></span>
  </div>
    <% if (@deactivated_module) %>
      <div class="field">
        <span class="label"><%= I18n.translate('component_types.field_name.deactivated') %></span>
        <span class="value" id="component_type_deactivated"><%= I18n.is_deactivated_or_not(@component_type.deactivated?) %></span>
      </div>
    <% end %>
</div>

<%= link_to I18n.translate('component_types.edit.action'), edit_component_type_path(@component_type) %>
 | <%= link_to I18n.translate('component_types.index.action'), component_types_path if can? :manage, @component_type %>
 | <%= link_to I18n.translate('component_types.new.action'), new_component_type_path if can? :manage, @component_type %>


<br><hr><br>

<h3><%= html_escape @component_type.nil_to_s %></h3>
<%= render :partial => 'components/list' %>

