<%
    @page_scope = 'job_types.new'
    @deactivated_module = defined?(JobType.new.deactivated_module)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>

<%= form_for(@job_type, :action => 'create') do |f| %>

    <%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @job_type, :sys_errors => @errors  } %>

    <div class="fields_20_80">
        <%= render :partial => 'job_types/form', :locals => { :f => f } %>
    </div>

    <div class="actions">
        <%= f.submit I18n.translate('view_action.create') %>
    </div>
    
<% end %>

<%= link_to I18n.translate('job_types.index.action'), job_types_path if can? :manage, @job_type %>
