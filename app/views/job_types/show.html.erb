<%
    @page_scope = 'job_types.show'
    @deactivated_module = defined?(JobType.new.deactivated_module)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>

<%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @job_type, :sys_errors => @errors  } %>

<div class="fields_20_80">


    <div class="field">
      <span class="label"><%= I18n.translate('job_types.field_name.id') %></span>
      <span class="value" id="job_type_id"><%= @job_type.id %></span>
    </div>

    <div class="field">
      <span class="label"><%= I18n.translate('job_types.field_name.name') %></span>
      <span class="value" id="job_type_name"><%= @job_type.name %></span>
    </div>

    <div class="field">
      <span class="label"><%= I18n.translate('job_types.field_name.description') %></span>
      <span class="value" id="job_type_description"><%= @job_type.description %></span>
    </div>

    <div class="field">
      <span class="label"><%= I18n.translate('job_types.field_name.sort_order') %></span>
      <span class="value" id="job_type_sort_order"><%= @job_type.sort_order %></span>
    </div>

<% if (@deactivated_module) %>
     <div class="field">
       <span class="label"><%= I18n.translate('job_types.field_name.deactivated') %></span>
       <span class="value" id="job_type_deactivated"><%= I18n.is_deactivated_or_not(@job_type.deactivated?) %></span>
     </div>
<% end %>

    <div class="field">
      <span class="label"><%= I18n.translate('job_types.field_name.created_at') %></span>
      <span class="value" id="job_type_created_at"><%= @job_type.created_at %></span>
    </div>

    <div class="field">
      <span class="label"><%= I18n.translate('job_types.field_name.updated_at') %></span>
      <span class="value" id="job_type_updated_at"><%= @job_type.updated_at %></span>
    </div>

</div>


<% if can? :manage, @job_type %>
    <%= link_to I18n.translate('job_types.edit.action'), edit_job_type_path(@job_type.id) %>
    | <%= link_to I18n.translate('job_types.index.action'), job_types_path %>
    | <%= link_to I18n.translate('job_types.list.action'), list_job_types_path %>
    | <%= link_to I18n.translate('job_types.new.action'), new_job_type_path %>
<% end %>
