
  <tr>

    <th><%= I18n.translate('job_types.field_name_short.id') %></th>

    <th><%= I18n.translate('job_types.field_name_short.name') %></th>

    <th><%= I18n.translate('job_types.field_name_short.description') %></th>

    <th><%= I18n.translate('job_types.field_name_short.sort_order') %></th>
<% if @deactivated_module %>
    <% if show_deactivated? %>
    <th><%= I18n.translate('job_types.field_name_short.deactivated') %></th>
    <th colspan="4"><%= link_to I18n.translate('view_action.hide_deactivated'), job_types_path('show_deactivated' => DB_FALSE.to_s) %></th>
    <% else %>
    <th colspan="3"><%= link_to I18n.translate('view_action.show_deactivated'), job_types_path('show_deactivated' => DB_TRUE.to_s) %></th>
    <% end %>
<% else %>
    <th colspan="3">&nbsp;</th>
<% end %>
  </tr>
