<%
@controller_scope = 'components'
@page_scope = 'components.index'
	@deactivated_module = defined?(Component.new.deactivated_module)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>


<div class="fields_20_80">

	<div class="field">
	  <span class="label_spacer"></span>
	  <span class="value"><h4>Actions Menu</h4></span>
	</div>

<% if can? :manage, Component %>

	<div class="field">
	  <span class="label"><label for="index_action"><%= I18n.translate('index.action', :scope => @controller_scope) %></label></span>
	  <span class="value" id="index_action"><%= link_to I18n.translate('index.action', :scope => @controller_scope), components_path %></span>
	</div>
	<div class="field">
	  <span class="label"><label for="new_action"><%= I18n.translate('list.action', :scope => @controller_scope) %></label></span>
	  <span class="value" id="new_action"><%= link_to I18n.translate('list.action', :scope => @controller_scope), list_components_path %></span>
	</div>

<% else %>

	<div class="error">You do not have the rights to manage <%= i18n.translate('title', :scope => @controller_scope) %></div>
	
	<div class="field">
	  <label for="edit_action"><%= I18n.translate('users_sessions.signin.action') %></label>
	  <span class="value" id="users_sessions_signin_action"><%= link_to I18n.translate('users_sessions.signin.action'), signin_path %></span>
	</div>

<% end %>
 
</div>

