<table cellspacing="0">
<%= render :partial => 'estimates/list_head' %>
<%
@estimates.each do |item|
        # only show deactivated item if deactivated module installed, and show deactivated is set.
        ( @deactivated_module && !show_deactivated? && item.deactivated? ) ? show_row = false : show_row = true
    if show_row
%>
    <%= render :partial => 'estimates/index_row', :locals => { :item => item } %>
<% end # if show_row
end # if table.each %>

</table>

<br />

<%= link_to I18n.translate('estimates.new.action'), new_estimate_path %>
