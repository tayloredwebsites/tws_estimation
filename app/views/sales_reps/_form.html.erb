

<div class="field">
      <%= f.label :id, I18n.translate('sales_reps.field_name.id'), :class => 'label' %>
    <span class="value" id="sales_rep_id"><%= @sales_rep.id %></span>
</div>



<div class="field">
    <%= f.label :user, I18n.translate('sales_reps.field_name.user'), :class => 'label' %>
    <span class="value">
        <%= collection_select( :sales_rep, :user_id, UsersController.list, :id, :username) %>
    </span>
</div>


<div class="field">
    <%= f.label :min_markup_pct, I18n.translate('sales_reps.field_name.min_markup_pct'), :class => 'label' %>
    <span class="value"><%= f.text_field :min_markup_pct %></span>
</div>


<div class="field">
    <%= f.label :max_markup_pct, I18n.translate('sales_reps.field_name.max_markup_pct'), :class => 'label' %>
    <span class="value"><%= f.text_field :max_markup_pct %></span>
</div>


<div class="field">
      <%= f.label :deactivated, I18n.translate('sales_reps.field_name.deactivated'), :class => 'label' %>
    <span class="value">
        <%= f.radio_button :deactivated, true %>
        <%= f.label "deactivated_true", "true", :class => 'span_after_label' %>
        <%= f.radio_button :deactivated, false %>
        <%= f.label "deactivated_false", "false", :class => 'span_after_label' %>
    </span>
</div>


<div class="field">
    <%= f.label :created_at, I18n.translate('sales_reps.field_name.created_at'), :class => 'label' %>
    <span class="value" id="sales_rep_created_at"><%= @sales_rep.created_at %></span>
</div>


<div class="field">
    <%= f.label :updated_at, I18n.translate('sales_reps.field_name.updated_at'), :class => 'label' %>
    <span class="value" id="sales_rep_updated_at"><%= @sales_rep.updated_at %></span>
</div>

