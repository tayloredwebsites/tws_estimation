<%
    @page_scope = 'sales_reps.edit'
    @deactivated_module = defined?(SalesRep.new.deactivated_module)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>

<%= form_for(@sales_rep, :action => 'update') do |f| %>

    <%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @sales_rep, :sys_errors => @errors  } %>

    <div class="fields_20_80">
        <%= render :partial => 'form', :locals => { :f => f } %>
    </div>

    <div class="actions">
        <%= f.submit I18n.translate('view_action.update') %>
    </div>
    
<% end %>

<%= link_to I18n.translate('sales_reps.show.action'), sales_rep_path(@sales_rep.id) %>
<% if can? :manage, @sales_rep %>
    | <%= link_to I18n.translate('sales_reps.index.action'), sales_reps_path %>
    | <%= link_to I18n.translate('sales_reps.list.action'), list_sales_reps_path %>
    | <%= link_to I18n.translate('sales_reps.new.action'), new_sales_rep_path %>
<% end %>
