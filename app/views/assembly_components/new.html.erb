<%
	@page_scope = 'assembly_components.new'
	@deactivated_module = defined?(AssemblyComponent.new.deactivated_module)
%>

<h4><%= I18n.translate('header', :scope => @page_scope) %></h4>

<%= form_for(@assembly_component, :action => 'create') do |f| %>

	<%= render :partial => 'layouts/errors_form', :locals => { :active_obj => @assembly_component, :sys_errors => @errors  } %>

	<div class="fields_20_80">
		<%= render :partial => 'assembly_components/form', :locals => { :f => f } %>
	</div>

	<div class="actions">
		<%= f.submit I18n.translate('view_action.create') %>
	</div>
	
<% end %>

<%= link_to I18n.translate('assembly_components.index.action'), assembly_components_path if can? :manage, @assembly_component %>
